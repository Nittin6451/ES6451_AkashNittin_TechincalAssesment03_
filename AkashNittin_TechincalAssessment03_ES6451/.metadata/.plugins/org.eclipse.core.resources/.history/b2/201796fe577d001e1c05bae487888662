package com.AkashNittin.TechincalAssessment03;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.support.PageFactory;


public class LoginAction {

	 WebDriver driver;
	 LoginLocators locators = null;
	 
	 public LoginAction(){
		 this.locators = new LoginLocators();
		 PageFactory.initElements(HelperClass.getDriver(),locators);
	 }
	 public void logbutton() {
         locators.Login.click();
	}
	  
	  public void setEmail(String strEmail) {
		  locators.EmailId.sendKeys(strEmail);
	}
	  
	  public void setPassword(String strPassword) {
		  locators.password.sendKeys(strPassword);
	}
	 public void setInvaildEmail(String Invalidemail) {
		 locators.EmailId.sendKeys(Invalidemail);
	 }
	  
	  public void login() {
		  locators.LogInButton.click();
	}
	  
	 
	 
	 
}
